<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/gmail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:src="@drawable/gmail"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/website"
        android:layout_width="50dp"
        android:padding="5dp"
        android:layout_height="50dp"
        android:src="@drawable/website"
        android:layout_below="@+id/gmail"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/love"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/india"
        android:layout_centerHorizontal="true"
        android:src="@drawable/love" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/love"
        android:layout_centerHorizontal="true"
        android:text="Handcrafted with"/>
    <TextView
        android:id="@+id/india"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/data"
        android:layout_centerHorizontal="true"
        android:text="in India"/>
    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Copyright \u00A9 | Whitehorse Business Solutions | 2020"/>
</RelativeLayout>
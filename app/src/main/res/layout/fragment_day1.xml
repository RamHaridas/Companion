<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"
    tools:context=".ui.home.Day1Fragment">

<TextView
    android:id="@+id/howyour"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="How are you feeling?"
    android:fontFamily="@font/ubuntu_medium"
    android:layout_above="@+id/images"
    android:textSize="16sp"
    android:layout_centerHorizontal="true"
    />
<LinearLayout
    android:id="@+id/images"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="12dp"
    android:gravity="center_horizontal"
    android:layout_centerInParent="true">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/greate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:src="@drawable/good"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Great"
            android:fontFamily="@font/ubuntu_medium"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/normal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:src="@drawable/average"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Normal"
            android:fontFamily="@font/ubuntu_medium"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/sad"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:src="@drawable/sad"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@android:color/black"
            android:text="Sad"
            android:gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>
<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/day1next"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Next"
    android:textColor="#fff"
    android:background="@drawable/rounded_button"
    android:layout_below="@+id/images"
    android:layout_margin="8dp"
    android:layout_centerHorizontal="true"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/day1next"
        app:lottie_rawRes="@raw/day"
        app:lottie_autoPlay="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:lottie_loop="true"/>
</RelativeLayout>